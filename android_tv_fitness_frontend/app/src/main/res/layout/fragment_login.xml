<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_root_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/tv_canvas_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/tv_space_6xl"
        android:paddingRight="@dimen/tv_space_6xl"
        android:paddingTop="@dimen/tv_space_4xl"
        android:paddingBottom="@dimen/tv_space_4xl"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Header / Logo -->
        <LinearLayout
            android:id="@+id/login_header"
            android:layout_width="720dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_launcher"
                android:contentDescription="@string/login_logo_desc" />

            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tv_space_2xl"
                android:text="@string/login_brand"
                android:textColor="@color/tv_primary"
                android:textSize="28sp"
                android:textStyle="bold"
                android:letterSpacing="0.08"
                android:textAllCaps="true" />
        </LinearLayout>

        <!-- Form Container -->
        <LinearLayout
            android:layout_width="720dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/tv_space_4xl">

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/bg_input_dark"
                android:hint="@string/login_email_hint"
                android:paddingLeft="@dimen/tv_pad_xl"
                android:paddingRight="@dimen/tv_pad_xl"
                android:textColor="@color/tv_primary"
                android:textColorHint="@color/tv_secondary" />

            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="@dimen/tv_space_2xl"
                android:background="@drawable/bg_input_dark"
                android:hint="@string/login_password_hint"
                android:paddingLeft="@dimen/tv_pad_xl"
                android:paddingRight="@dimen/tv_pad_xl"
                android:textColor="@color/tv_primary"
                android:textColorHint="@color/tv_secondary"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/text_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tv_space_l"
                android:textColor="@color/tv_error"
                android:textSize="18sp"
                android:visibility="gone"
                android:text=""/>
        </LinearLayout>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="720dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/tv_space_3xl"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_sign_in"
                style="@style/TvPrimaryButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="64dp"
                android:text="@string/login_sign_in" />

            <Space
                android:layout_width="@dimen/tv_space_l"
                android:layout_height="1dp"/>

            <Button
                android:id="@+id/btn_register"
                style="@style/TvSecondaryButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="64dp"
                android:text="@string/login_register" />
        </LinearLayout>

        <TextView
            android:id="@+id/link_forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tv_space_2xl"
            android:text="@string/login_forgot"
            android:textColor="@color/tv_secondary"
            android:textSize="18sp"/>

    </LinearLayout>

</ScrollView>
