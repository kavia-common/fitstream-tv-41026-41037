<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for Android TV -->
    <style name="AppTheme" parent="Theme.Leanback">
        <item name="android:windowBackground">@color/tv_background</item>
        <item name="android:colorPrimary">@color/tv_accent</item>
        <item name="android:colorAccent">@color/tv_accent</item>
        <!-- Ensure non-translucent main window to avoid blank/transparent screens -->
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!-- Primary filled button for dark background -->
    <style name="TvPrimaryButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/bg_primary_button_dark</item>
        <item name="android:textColor">@color/tv_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:paddingLeft">@dimen/tv_pad_xl</item>
        <item name="android:paddingRight">@dimen/tv_pad_xl</item>
    </style>

    <!-- Secondary outline button for dark background -->
    <style name="TvSecondaryButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/bg_secondary_button_dark</item>
        <item name="android:textColor">@color/tv_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:paddingLeft">@dimen/tv_pad_xl</item>
        <item name="android:paddingRight">@dimen/tv_pad_xl</item>
    </style>

    <!-- Gold primary button (Titan) -->
    <style name="TvGoldPrimaryButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/bg_gold_button</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:paddingLeft">@dimen/tv_pad_xl</item>
        <item name="android:paddingRight">@dimen/tv_pad_xl</item>
    </style>

    <!-- Light outline secondary (used inside modal) -->
    <style name="TvSecondaryButtonLight" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/bg_secondary_button_light</item>
        <item name="android:textColor">@color/tv_light_text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:paddingLeft">@dimen/tv_pad_xl</item>
        <item name="android:paddingRight">@dimen/tv_pad_xl</item>
    </style>

    <!-- Dialog theme with transparent window for scrim -->
    <style name="TvDialogTheme" parent="Theme.Leanback">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
