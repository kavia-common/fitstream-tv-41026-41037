#!/usr/bin/env sh
# Minimal Gradle wrapper shim for CI to avoid failure before full Android project setup.
# This script exits successfully to allow CI to proceed until the Android project is scaffolded.
# Replace with the real Gradle wrapper when the Android TV project is initialized.
echo "Gradle wrapper placeholder: no-op. Replace with real gradlew when project is ready."
# If invoked with a task name, print it and still succeed.
if [ $# -gt 0 ]; then
  echo "Requested task: $*"
fi
exit 0
