#!/usr/bin/env sh
##############################################################################
##
## Gradle start up script for UN*X
##
##############################################################################
# Attempt to locate JAVA
if [ -n "$JAVA_HOME" ] ; then
    JAVACMD="$JAVA_HOME/bin/java"
else
    JAVACMD="java"
fi
APP_BASE_DIR=$(dirname "$0")
CLASSPATH="$APP_BASE_DIR/gradle/wrapper/gradle-wrapper.jar"
# If wrapper JAR missing, try to download it using distributionUrl from properties
PROPS_FILE="$APP_BASE_DIR/gradle/wrapper/gradle-wrapper.properties"
if [ ! -f "$CLASSPATH" ] && [ -f "$PROPS_FILE" ]; then
  DIST_URL=$(grep distributionUrl "$PROPS_FILE" | sed -e 's/.*=//')
  WRAPPER_URL="${DIST_URL%/*}/gradle-wrapper.jar"
  mkdir -p "$APP_BASE_DIR/gradle/wrapper"
  if command -v curl >/dev/null 2>&1; then
    curl -fsSL "$WRAPPER_URL" -o "$CLASSPATH"
  elif command -v wget >/dev/null 2>&1; then
    wget -q "$WRAPPER_URL" -O "$CLASSPATH"
  fi
fi
exec "$JAVACMD" -Dorg.gradle.appname=gradlew -classpath "$CLASSPATH" org.gradle.wrapper.GradleWrapperMain "$@"
